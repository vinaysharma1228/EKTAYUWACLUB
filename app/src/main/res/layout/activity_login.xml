<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/bg_circle"
        android:gravity="center">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="-100dp"
            android:src="@drawable/app_logo"


            />






    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_demo2"
        android:orientation="vertical"
        android:layout_marginRight="-250dp"
        android:layout_marginBottom="-40dp"
        >



        <TextView
            android:layout_width="330dp"
            android:layout_height="400dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/circle_demo"
        android:layout_marginLeft="-140dp"
        android:layout_marginBottom="-150dp"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="300dp">


        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/rectangle_demo"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:text=" Login "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/adminEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_et"
            android:drawableLeft="@drawable/em"
            android:drawableTint="@color/black"
            android:hint=" Enter your Email"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"

            />


        <EditText
            android:id="@+id/adminPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_et"
            android:drawableLeft="@drawable/lock"
            android:drawableTint="@color/black"
            android:hint=" Enter your password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"

            />


        <ImageView
            android:id="@+id/pass_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="-42dp"
            android:src="@drawable/open_eye" />


        <TextView
            android:id="@+id/adminloginSignInBtn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_demo"
            android:drawableRight="@drawable/ba"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:padding="5dp"
            android:text="Sign In"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"

            />




    </LinearLayout>








</RelativeLayout>